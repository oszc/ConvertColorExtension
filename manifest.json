{
  // 清单文件的版本，这个必须写，而且必须是2
  "manifest_version": 2,
  // 插件的名称
  "name": "ConvertColor",
  // 插件的版本
  "version": "1.0.0",
  // 插件描述
  "description": "把一个含有alpha值的颜色，转换为一个以白色为背景的标准的颜色值",
  // 图标，一般偷懒全部用一个尺寸的也没问题
  "icons": {
    "48": "img/camera.png"
  },
  // 会一直常驻的后台JS或后台页面
  // 浏览器右上角图标设置，browser_action、page_action、app必须三选一
  "browser_action": {
    "default_icon": "img/camera.png",
    // 图标悬停时的标题，可选
    "default_title": "JustinZhang",
    "default_popup": "ConverColor.html"
  },

  // 需要直接注入页面的JS
  "permissions": [
  ]
  // 普通页面能够直接访问的插件资源列表，如果不设置是无法直接访问的

}